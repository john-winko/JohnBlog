@using Microsoft.AspNetCore.Identity
@model IEnumerable<JohnBlog.Models.Blog>
@inject UserManager<BlogUser> _userManager

@{
    ViewData["Title"] = "Index";
}
@{
    var isAuthor = User.Identity!.IsAuthenticated &&
                   Model!.FirstOrDefault()!.BlogUserId == _userManager.GetUserId(User);
}

@if (isAuthor)
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<div class="row">
    @foreach (var item in Model!)
    {
        <div class="col-lg-4 col-12 p-2">
            <div class="card h-100 bg-light">
                <div class="card-header fs-3">
                    @item.Name
                </div>
                <img src="@item.BlogImage" alt="" class="card-img-top mt-3" style="object-fit: contain;max-height: 250px;min-height: 250px;"/>
                <div class="card-body">
                    @* <h5 class="card-title d-flex flex-column justify-content-center text-center"></h5> *@
                    <p class="card-text">@item.Description</p>
                    <a asp-controller="Posts" asp-action="PostsByBlogIndex" asp-route-blogId="@item.Id" class="stretched-link"></a>
                </div>
                <div class="card-footer">
                    @item.Posts.Count blog posts
                </div>
                @* <div class="d-flex justify-content-center"> *@
                @*     <a asp-controller="Posts" asp-action="PostsByBlogIndex" asp-route-blogId="@item.Id" class="btn btn-primary m-2">View</a> *@
                @*     @if (isAuthor) *@
                @*     { *@
                @*         <a asp-controller="Blogs" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary m-2">Edit</a> *@
                @*     } *@
                @* </div> *@
            </div>
        </div>
    }
</div>