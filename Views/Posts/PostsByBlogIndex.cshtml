@model IEnumerable<JohnBlog.Models.Post>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model!)
    {
        <div class="col-lg-4 col-12 p-2">
            <div class="card h-100 bg-light">
                <div class="card-body">
                    <h5 class="display-6 card-title d-flex flex-column justify-content-center text-center" style="min-height: 100px;">@item.Title</h5>
                    <p class="card-text">@item.Abstract</p>
                </div>
                <div class="d-flex justify-content-center">
                    @* TODO update details view for post *@
                    <a asp-action="Details" asp-route-slug="@item.Slug" class="btn btn-primary m-2">View</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary m-2">Edit</a>

                </div>
            </div>
        </div>
    }
</div>